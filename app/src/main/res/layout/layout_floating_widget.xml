<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayoutParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!-- this is the collapsed layout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutCollapsed"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:id="@+id/collapsed_iv"
                android:src="@drawable/concat"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/buttonClose"
                android:src="@drawable/apple"/>
        </RelativeLayout>

        <!-- This is the expanded layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutExpanded"
            android:background="#a0cdd7"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/buttonSimplifiedCodingExpanded"
                android:src="@drawable/concat"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:id="@+id/buttonSimplifiedCoding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="Facts:"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#000099"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/quickLaunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to launch"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:id="@+id/returnToApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open App"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>